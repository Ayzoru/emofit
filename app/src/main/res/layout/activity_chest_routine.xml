<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F1C54"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ChestRoutine">

        <FrameLayout
            android:id="@+id/frameLayout5"
            android:layout_width="414dp"
            android:layout_height="2216dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Workout GIF (Placeholder) -->

                <!-- Timer Display -->

                <!-- Start Button -->

                <!-- Step-by-Step Description -->

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardView5"
                    android:layout_width="438dp"
                    android:layout_height="84dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:neumorph_shadowElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content">


                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnBackToWorkout"
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="178dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="B a c k"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:neumorph_backgroundColor="#7BB9C3"
                            app:neumorph_shadowColorDark="#3A595D"
                            app:neumorph_shadowElevation="3dp"
                            app:neumorph_strokeColor="#0B0808"
                            app:neumorph_strokeWidth="2dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/startKneePushUp"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="START"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timerKneePushUp"
                    app:neumorph_backgroundColor="#77B7EB"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="#000000"
                    app:neumorph_strokeWidth="2dp" />

                <TextView
                    android:id="@+id/timerKneePushUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutDescription3" />

                <TextView
                    android:id="@+id/workoutDescription3"
                    android:layout_width="387dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="36dp"
                    android:lineSpacingExtra="3sp"
                    android:padding="8dp"
                    android:text="1. Get on your knees and place your hands slightly wider than shoulder-width.
                                    \n2. Keep your body straight from your head to your knees.
                                    \n3. Slowly lower your body until your chest almost touches the ground.
                                    \n4. Push back up until your arms are nearly straight."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.428"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutGif3" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/workoutGif3"
                    android:layout_width="235dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/kneepushupsgif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewKneePushUp" />

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewKneePushUp"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="278dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="1424dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.503"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="224dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Knee \nPush Ups"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.38"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/startInclinePushUp"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="START"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timerInclinePushUp"
                    app:neumorph_backgroundColor="#77B7EB"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="#000000"
                    app:neumorph_strokeWidth="2dp" />

                <TextView
                    android:id="@+id/timerInclinePushUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="01:00"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutDescription2" />

                <TextView
                    android:id="@+id/workoutDescription2"
                    android:layout_width="387dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3sp"
                    android:padding="8dp"
                    android:text="1. Stand facing bench or sturdy elevated platform.
                                    \n2. Place hands on edge of bench or platform, slightly wider than shoulder width.
                                    \n3. Slowly lower your body until your chest almost touches the bench.
                                    \n4. Push body up until arms are extended."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.515"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutGif2" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/workoutGif2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/inclinepushupgif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewInclinePushUp" />

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewInclinePushUp"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="278dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="700dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="224dp"
                            android:layout_height="65dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Incline \nPush Ups"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.38"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewPushUp"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="280dp"
                    android:layout_height="87dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="226dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Push Ups"
                            android:textAlignment="center"
                            android:textSize="27sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/workoutGif"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pushupgif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewPushUp" />

                <TextView
                    android:id="@+id/timerPushUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="28dp"

                    android:gravity="center"
                    android:padding="8dp"
                    android:text="01:00"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutDescription" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/startPushUpButton"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="START"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timerPushUp"
                    app:neumorph_backgroundColor="#77B7EB"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="#000000"
                    app:neumorph_strokeWidth="2dp" />

                <TextView
                    android:id="@+id/workoutDescription"
                    android:layout_width="387dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="28dp"
                    android:lineSpacingExtra="3sp"
                    android:padding="8dp"
                    android:text="1. Place your hands firmly on the ground, directly under shoulders.
                                    \n2. Flatten your back so your entire body is straight and slowly lower your body
                                    \n3. Draw shoulder blades back and down, keeping elbows tucked close to your body
                                    \n4. Exhale as you push back to the starting position."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutGif" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neumorphCardView"
            style="@style/ShapeAppearance.Neumorph.CardView"
            android:layout_width="280dp"
            android:layout_height="87dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_shadowColorDark="#1C132E"
            app:neumorph_shadowColorLight="#766E89"
            app:neumorph_shadowElevation="3dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="12dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="226dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Chest Routine"
                    android:textAlignment="center"
                    android:textColor="#7BB9C3"
                    android:textSize="27sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </soup.neumorphism.NeumorphCardView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="183dp"
            android:layout_height="87dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="114dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emofitdark" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
