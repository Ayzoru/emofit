<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F1C54"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2F1C54"
        tools:context=".Preferences">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/btnCardio"
            style="@style/ShapeAppearance.Neumorph.CardView"
            android:layout_width="374dp"
            android:layout_height="694dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView2"
            app:layout_constraintVertical_bias="0.372"
            app:neumorph_shadowColorDark="#1C132E"
            app:neumorph_shadowColorLight="#766E89"
            app:neumorph_shadowElevation="4dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/btnClearData"
                        style="@style/Widget.Neumorph.Button"
                        android:layout_width="168dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="Clear Data"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewClear"
                        app:neumorph_backgroundColor="#77B7EB"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="#000000"
                        app:neumorph_strokeWidth="2dp" />

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/neumorphCardViewClear"
                        style="@style/ShapeAppearance.Neumorph.CardView"
                        android:layout_width="227dp"
                        android:layout_height="105dp"
                        android:layout_marginTop="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btnUpdate"
                        app:neumorph_shadowElevation="5dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="198dp"
                            android:layout_height="80dp"
                            tools:layout_editor_absoluteX="12dp"
                            tools:layout_editor_absoluteY="12dp">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="148dp"
                                android:layout_height="71dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/black_ops_one"
                                android:text="Clear Data and Start from Beginning"
                                android:textAlignment="center"
                                android:textSize="17sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.492"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <FrameLayout
                        android:id="@+id/frameLayout7"
                        android:layout_width="255dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/rounded_cornerspurple"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewAge">

                        <EditText
                            android:id="@+id/editTextAge"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Edit your age here"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#493F3F" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textViewAge"
                        android:layout_width="228dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="28dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="Age:"
                        android:textAlignment="center"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout6" />

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="229dp"
                        android:layout_height="21dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="Username: "
                        android:textAlignment="center"
                        android:textSize="17sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.488"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewPullUp" />

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/neumorphCardViewPullUp"
                        style="@style/ShapeAppearance.Neumorph.CardView"
                        android:layout_width="215dp"
                        android:layout_height="81dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.494"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:neumorph_shadowElevation="5dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="189dp"
                            android:layout_height="60dp"
                            tools:layout_editor_absoluteX="12dp"
                            tools:layout_editor_absoluteY="12dp">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="138dp"
                                android:layout_height="51dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/black_ops_one"
                                android:text="Edit User Details"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.492"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <FrameLayout
                        android:id="@+id/frameLayout6"
                        android:layout_width="255dp"
                        android:layout_height="37dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_cornerspurple"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textViewName">

                        <EditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:hint="Edit your name here"
                            android:inputType="text"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#493F3F" />
                    </FrameLayout>

                    <soup.neumorphism.NeumorphButton
                        android:id="@+id/btnUpdate"
                        style="@style/Widget.Neumorph.Button"
                        android:layout_width="168dp"
                        android:layout_height="58dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="Update"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.496"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout7"
                        app:neumorph_backgroundColor="#77B7EB"
                        app:neumorph_shadowElevation="4dp"
                        app:neumorph_strokeColor="#000000"
                        app:neumorph_strokeWidth="2dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>


        </soup.neumorphism.NeumorphCardView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="183dp"
            android:layout_height="87dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emofitdark" />

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neumorphCardView2"
            style="@style/ShapeAppearance.Neumorph.CardView"
            android:layout_width="261dp"
            android:layout_height="78dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_shadowColorDark="#1C132E"
            app:neumorph_shadowColorLight="#766E89"
            app:neumorph_shadowElevation="3dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="254dp"
                android:layout_height="72dp"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="12dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="205dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Preferences"
                    android:textAlignment="center"
                    android:textColor="#7BB9C3"
                    android:textSize="23sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.326"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </soup.neumorphism.NeumorphCardView>

        <FrameLayout
            android:id="@+id/frameLayout8"
            android:layout_width="410dp"
            android:layout_height="81dp"
            android:background="#E4EBF5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardView5"
                    android:layout_width="461dp"
                    android:layout_height="83dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:neumorph_shadowElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="444dp"
                        android:layout_height="83dp">


                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnBackToDashboard"
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="178dp"
                            android:layout_height="60dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="B a c k"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:neumorph_backgroundColor="#7BB9C3"
                            app:neumorph_shadowColorDark="#3A595D"
                            app:neumorph_shadowElevation="3dp"
                            app:neumorph_strokeColor="#0B0808"
                            app:neumorph_strokeWidth="2dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>