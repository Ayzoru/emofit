<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F1C54"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MoodDetector">

        <FrameLayout
            android:id="@+id/frameLayout5"
            android:layout_width="408dp"
            android:layout_height="2202dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Workout GIF (Placeholder) -->

                <!-- Timer Display -->

                <!-- Start Button -->

                <!-- Step-by-Step Description -->

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardView5"
                    android:layout_width="438dp"
                    android:layout_height="84dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:neumorph_shadowElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content">


                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnBackToDashboard"
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="178dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="B a c k"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:neumorph_backgroundColor="#7BB9C3"
                            app:neumorph_shadowColorDark="#3A595D"
                            app:neumorph_shadowElevation="3dp"
                            app:neumorph_strokeColor="#0B0808"
                            app:neumorph_strokeWidth="2dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/submit_button"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="SUBMIT"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:neumorph_backgroundColor="#77B7EB"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="#000000"
                    app:neumorph_strokeWidth="2dp" />

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewQuestions"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="280dp"
                    android:layout_height="87dp"
                    android:layout_marginTop="776dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="225dp"
                            android:layout_height="51dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Questions"
                            android:textAlignment="center"
                            android:textSize="27sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.38"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewSteps"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="280dp"
                    android:layout_height="87dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="226dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Steps"
                            android:textAlignment="center"
                            android:textSize="27sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <TextView
                    android:id="@+id/workoutDescription"
                    android:layout_width="343dp"
                    android:layout_height="586dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="25dp"
                    android:fontFamily="@font/black_ops_one"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="8sp"
                    android:padding="8dp"
                    android:text="1. The Mood Detector System is a mini questionaire with only 4 questions in Multiple Choice format
                                    \n\n2. Please answer each of the questions in order for the system to provide the correct Current Mood of you!
                                    \n\n3. The more positive the answer is, the higher the chance of getting a positive mood!
                                    \n\n4. After completing the mini questionaire and clicking Done it will lead to the Workout Menu page which will display your Current Mood, and you are free to start your desire workout with the ideal intensity.
                                    \n\n5. If you ever feel like your mood is different or unsatisfied, you can return to this page to evaluate your mood again."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.516"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewSteps" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="342dp"
                    android:layout_height="1127dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewQuestions">

                    <TextView
                        android:id="@+id/question1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="1. How energized do you feel today?"
                        android:textColor="#333333"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:id="@+id/answers1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very energized" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Somewhat energized" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neutral" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low energy" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/question2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="2. Have you been worrying about something recently?"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:id="@+id/answers2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not at all" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A little" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Somewhat" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A lot" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/question3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="3. How often have you felt relaxed or at ease today?"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:id="@+id/answers3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very often" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Often" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sometimes" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rarely" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/question4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/black_ops_one"
                        android:text="4. Do you feel interested or excited about something right now?"
                        android:textSize="18sp" />

                    <RadioGroup
                        android:id="@+id/answers4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Very interested" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Interested" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neutral" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disinterested" />
                    </RadioGroup>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neumorphCardView"
            style="@style/ShapeAppearance.Neumorph.CardView"
            android:layout_width="280dp"
            android:layout_height="87dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_shadowColorDark="#1C132E"
            app:neumorph_shadowColorLight="#766E89"
            app:neumorph_shadowElevation="3dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="12dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="226dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Mood Detector"
                    android:textAlignment="center"
                    android:textColor="#7BB9C3"
                    android:textSize="27sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </soup.neumorphism.NeumorphCardView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="183dp"
            android:layout_height="87dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="114dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emofitdark" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
