<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F1C54"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".CardioRoutine">

        <FrameLayout
            android:id="@+id/frameLayout5"
            android:layout_width="414dp"
            android:layout_height="1475dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neumorphCardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Workout GIF (Placeholder) -->

                <!-- Timer Display -->

                <!-- Start Button -->

                <!-- Step-by-Step Description -->

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardView5"
                    android:layout_width="438dp"
                    android:layout_height="84dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintStart_toStartOf="parent"
                    app:neumorph_shadowElevation="6dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content">


                        <soup.neumorphism.NeumorphButton
                            android:id="@+id/btnBackToWorkout"
                            style="@style/Widget.Neumorph.Button"
                            android:layout_width="178dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="B a c k"
                            android:textAllCaps="false"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:neumorph_backgroundColor="#7BB9C3"
                            app:neumorph_shadowColorDark="#3A595D"
                            app:neumorph_shadowElevation="3dp"
                            app:neumorph_strokeColor="#0B0808"
                            app:neumorph_strokeWidth="2dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/startMountainButton"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="START"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timerMountain"
                    app:neumorph_backgroundColor="#77B7EB"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="#000000"
                    app:neumorph_strokeWidth="2dp" />

                <TextView
                    android:id="@+id/timerMountain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="01:00"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutDescription2" />

                <TextView
                    android:id="@+id/workoutDescription2"
                    android:layout_width="387dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3sp"
                    android:padding="8dp"
                    android:text="1. Start in a plank position with your hands under your shoulders.
                                    \n2. Keep your core tight and your body in a straight line.
                                    \n3. Bring one knee toward your chest, then quickly switch legs.
                                    \n4. Alternate legs in a running motion, keeping a steady pace."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.515"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutGif2" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/workoutGif2"
                    android:layout_width="219dp"
                    android:layout_height="224dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/mountaingif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewMountain" />

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewMountain"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="275dp"
                    android:layout_height="119dp"
                    android:layout_marginTop="700dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="250dp"
                        android:layout_height="92dp"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="229dp"
                            android:layout_height="71dp"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Mountain Climbers"
                            android:textAlignment="center"
                            android:textSize="27sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.432"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neumorphCardViewBurpees"
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="280dp"
                    android:layout_height="87dp"
                    android:layout_marginTop="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:neumorph_shadowElevation="5dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        tools:layout_editor_absoluteX="12dp"
                        tools:layout_editor_absoluteY="12dp">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="226dp"
                            android:layout_height="42dp"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/black_ops_one"
                            android:text="Burpees"
                            android:textAlignment="center"
                            android:textSize="27sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </soup.neumorphism.NeumorphCardView>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/workoutGif"
                    android:layout_width="253dp"
                    android:layout_height="232dp"
                    android:layout_gravity="center"
                    android:src="@drawable/burpeesgif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/neumorphCardViewBurpees" />

                <TextView
                    android:id="@+id/timerBurpees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="28dp"

                    android:gravity="center"
                    android:padding="8dp"
                    android:text="01:00"
                    android:textColor="#000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutDescription" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/startBurpeesButton"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="START"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timerBurpees"
                    app:neumorph_backgroundColor="#77B7EB"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_strokeColor="#000000"
                    app:neumorph_strokeWidth="2dp" />

                <TextView
                    android:id="@+id/workoutDescription"
                    android:layout_width="386dp"
                    android:layout_height="176dp"
                    android:layout_marginTop="28dp"
                    android:lineSpacingExtra="3sp"
                    android:padding="8dp"
                    android:text="1. Stand with your feet shoulder-width apart.
                                    \n2. Lower into a squat and place your hands on the floor in front of you.
                                    \n3. Kick your legs back into a plank position.
                                    \n4. Perform a push-up if you can, then quickly jump your legs back toward your hands.
                                    \n5. Explode upward into a jump, reaching your hands overhead."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/workoutGif" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neumorphCardView"
            style="@style/ShapeAppearance.Neumorph.CardView"
            android:layout_width="280dp"
            android:layout_height="87dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:neumorph_backgroundColor="#000000"
            app:neumorph_shadowColorDark="#1C132E"
            app:neumorph_shadowColorLight="#766E89"
            app:neumorph_shadowElevation="3dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="12dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="226dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/black_ops_one"
                    android:text="Cardio Routine"
                    android:textAlignment="center"
                    android:textColor="#7BB9C3"
                    android:textSize="27sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </soup.neumorphism.NeumorphCardView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="183dp"
            android:layout_height="87dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="114dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/emofitdark" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
